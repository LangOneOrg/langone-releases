// Basic conditional with function workaround
function get_value_description(value) {
    if (value == 42) {
        return "Found the answer!";
    } else if (value == 0) {
        return "Zero";
    } else {
        return "Other number";
    }
}

let value = 42;
let result = get_value_description(value);
println("Match result: " + result);

// Number classification
function classify_number(num) {
    if (num == 1) {
        return "One";
    } else if (num == 2) {
        return "Two";
    } else if (num == 3) {
        return "Three";
    } else if (num == 4) {
        return "Four";
    } else if (num == 5) {
        return "Five";
    } else {
        return "Unknown";
    }
}

println("");
println("Number classification:");
let i = 1;
while (i <= 5) {
    let description = classify_number(i);
    println("Number " + to_string(i) + " is " + description);
    i = i + 1;
}

// Value categorization
function categorize_value(val) {
    if (val < 20) {
        return "Small";
    } else if (val < 50) {
        return "Medium";
    } else if (val < 100) {
        return "Large";
    } else {
        return "Very Large";
    }
}

