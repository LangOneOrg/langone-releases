println("Value " + to_string(test3) + " is " + categorize_value(test3));
println("Value " + to_string(test4) + " is " + categorize_value(test4));

// Default case demonstration with function
function get_default_result(value) {
    if (value == 1) {
        return "One";
    } else if (value == 2) {
        return "Two";
    } else {
        return "Default case triggered";
    }
}

let unknownValue = 999;
let defaultResult = get_default_result(unknownValue);
println("");
println("Default result: " + defaultResult);
