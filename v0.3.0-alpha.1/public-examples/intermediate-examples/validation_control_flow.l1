// Control Flow Validation Test
println("=== Control Flow Tests ===");

// If/Else statements
let x = 10;
let y = 5;

if (x > y) {
    println("x is greater than y");
} else {
    println("x is not greater than y");
}

if (x == y) {
    println("x equals y");
} else {
    println("x does not equal y");
}

// Nested conditions
if (x > 0) {
    if (y > 0) {
        println("Both x and y are positive");
    } else {
        println("x is positive but y is not");
    }
} else {
    println("x is not positive");
}

// While loop (using manual iteration since for loops have issues)
println("=== While Loop Test ===");
let counter = 1;
let sum = 0;
while (counter <= 5) {
    sum = sum + counter;
    println("Counter: " + to_string(counter) + ", Sum: " + to_string(sum));
    counter = counter + 1;
}

println("Final sum: " + to_string(sum));

println("âœ… Control flow validation complete");
